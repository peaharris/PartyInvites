@model PartyInvites.Models.GuestResponse //allows you to receive a guest response

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body class="text-center">
    <h1> Thank You @Model.Name </h1>

    @if (Model.WillAttend == true)
    {
        @: It's great that you're coming. The drinks are already in the fridge. 
    }
    else
    {
        @: Sorry that you won't be able to make it. Thank you for letting us know. 
    }

    <p>
        Click <a class="nav-link" asp-action="ListResponses"> here </a> to see who's coming.
    </p>

</body>
</html>
